{
  "info": {
    "name": "WFH Attendance API",
    "description": "Complete API collection for WFH Attendance Application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "auth_base_url",
      "value": "http://localhost:3001"
    },
    {
      "key": "employee_base_url",
      "value": "http://localhost:3002"
    },
    {
      "key": "attendance_base_url",
      "value": "http://localhost:3003"
    },
    {
      "key": "access_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"hr@company.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{auth_base_url}}/auth/login",
              "host": ["{{auth_base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@company.com\",\n  \"password\": \"password123\",\n  \"role\": \"employee\"\n}"
            },
            "url": {
              "raw": "{{auth_base_url}}/auth/register",
              "host": ["{{auth_base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_base_url}}/auth/profile",
              "host": ["{{auth_base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{auth_base_url}}/auth/verify",
              "host": ["{{auth_base_url}}"],
              "path": ["auth", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Employee Service",
      "item": [
        {
          "name": "Get All Employees",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{employee_base_url}}/employees",
              "host": ["{{employee_base_url}}"],
              "path": ["employees"]
            }
          }
        },
        {
          "name": "Create Employee",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"EMP002\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\",\n  \"department\": \"Marketing\",\n  \"position\": \"Marketing Manager\",\n  \"phone\": \"+1234567891\",\n  \"hireDate\": \"2024-02-01\",\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{employee_base_url}}/employees",
              "host": ["{{employee_base_url}}"],
              "path": ["employees"]
            }
          }
        },
        {
          "name": "Get Employee by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{employee_base_url}}/employees/1",
              "host": ["{{employee_base_url}}"],
              "path": ["employees", "1"]
            }
          }
        },
        {
          "name": "Update Employee",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"department\": \"IT\",\n  \"position\": \"Senior Developer\"\n}"
            },
            "url": {
              "raw": "{{employee_base_url}}/employees/1",
              "host": ["{{employee_base_url}}"],
              "path": ["employees", "1"]
            }
          }
        },
        {
          "name": "Delete Employee",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{employee_base_url}}/employees/1",
              "host": ["{{employee_base_url}}"],
              "path": ["employees", "1"]
            }
          }
        },
        {
          "name": "Get Employee Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{employee_base_url}}/employees/stats",
              "host": ["{{employee_base_url}}"],
              "path": ["employees", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance Service",
      "item": [
        {
          "name": "Submit Attendance",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "employeeId",
                  "value": "1",
                  "type": "text"
                },
                {
                  "key": "notes",
                  "value": "Working from home today",
                  "type": "text"
                },
                {
                  "key": "photo",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{attendance_base_url}}/attendance",
              "host": ["{{attendance_base_url}}"],
              "path": ["attendance"]
            }
          }
        },
        {
          "name": "Get All Attendance Records",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{attendance_base_url}}/attendance?page=1&limit=10",
              "host": ["{{attendance_base_url}}"],
              "path": ["attendance"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{attendance_base_url}}/attendance/my-attendance",
              "host": ["{{attendance_base_url}}"],
              "path": ["attendance", "my-attendance"]
            }
          }
        },
        {
          "name": "Get Today's Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{attendance_base_url}}/attendance/today",
              "host": ["{{attendance_base_url}}"],
              "path": ["attendance", "today"]
            }
          }
        },
        {
          "name": "Get Attendance by Employee",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{attendance_base_url}}/attendance/employee/1",
              "host": ["{{attendance_base_url}}"],
              "path": ["attendance", "employee", "1"]
            }
          }
        },
        {
          "name": "Get Attendance Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{attendance_base_url}}/attendance/stats",
              "host": ["{{attendance_base_url}}"],
              "path": ["attendance", "stats"]
            }
          }
        }
      ]
    }
  ]
}
